services:
  db_recipes:
    restart: unless-stopped
    image: postgres:16-alpine
    volumes:
      - /media/{{ mount_point }}/Media/Recipes/tandoor/postgres:/var/lib/postgresql/data
    env_file:
      - ./.env
    healthcheck:
      test: ["CMD", "pg_isready", "-U", "postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  web_recipes:
    restart: always
    image: vabene1111/recipes:1.5.24

    env_file:
      - ./.env
    volumes:
      - staticfiles:/opt/recipes/staticfiles
      # Do not make this a bind mount, see https://docs.tandoor.dev/install/docker/#volumes-vs-bind-mounts
      - nginx_config:/opt/recipes/nginx/conf.d
      - /media/{{ mount_point }}/Media/Recipes/tandoor/mediafiles:/opt/recipes/mediafiles
    depends_on:
      - db_recipes

  nginx_recipes:
    image: nginx:mainline-alpine
    restart: always
    ports:
      - 8081:80
    env_file:
      - ./.env
    depends_on:
      - web_recipes
    volumes:
      # Do not make this a bind mount, see https://docs.tandoor.dev/install/docker/#volumes-vs-bind-mounts
      - nginx_config:/etc/nginx/conf.d:ro
      - staticfiles:/static:ro
      - /media/{{ mount_point }}/Media/Recipes/tandoor/mediafiles:/media:ro

volumes:
  nginx_config:
  staticfiles: