version: "3.7"
services:
  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:version-5.0.3-r0
    container_name: qbittorrent
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - WEBUI_PORT=9080
      - TORRENTING_PORT=6881
    volumes:
      - /media/{{ mount_point }}/Media/Metadata/qbittorrent/appdata:/config
      - /media/{{ mount_point }}/Media/Downloads/completed:/downloads #optional
    ports:
      - 9080:9080
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped
    networks:
      - bridge_network


  # https://github.com/linuxserver/docker-radarr
  radarr:
    image: linuxserver/radarr:5.18.4.9674-ls259
    container_name: radarr
    restart: always
    ports:
      - "7878:7878"
    environment:
      - PGID=1000
      - PUID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - /media/{{ mount_point }}/Media/Metadata/radarr:/config
      - /media/{{ mount_point }}/Media/Movies:/movies
      - /media/{{ mount_point }}/Media/Downloads/completed:/downloads
    networks:
      - bridge_network

  # https://github.com/linuxserver/docker-sonarr
  sonarr:
    image: linuxserver/sonarr:4.0.12.2823-ls270
    container_name: sonarr
    restart: always
    ports:
      - "8989:8989"
    environment:
      - PGID=1000
      - PUID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - /media/{{ mount_point }}/Media/Metadata/sonarr:/config
      - /media/{{ mount_point }}/Media/TV Shows:/tv
      - /media/{{ mount_point }}/Media/Downloads/completed:/downloads
    networks:
      - bridge_network

  # https://github.com/linuxserver/docker-prowlarr
  prowlarr:
    image: linuxserver/prowlarr:develop-1.31.1.4959-ls216

    container_name: prowlarr
    restart: always
    ports:
      - "9696:9696"
    cap_add:
      - NET_ADMIN
    environment:
      - PGID=1000
      - PUID=1000
      - TZ=Europe/Amsterdam
    volumes:
      - /media/{{ mount_point }}/Media/Metadata/prowlarr:/config
      - /media/{{ mount_point }}/Media/Downloads/watch:/downloads
    networks:
      - bridge_network

  bazarr:
    image: lscr.io/linuxserver/bazarr:v1.5.1-ls290
    container_name: bazarr
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
    volumes:
      - /media/{{ mount_point }}/Media/Metadata/bazarr:/config
      - /media/{{ mount_point }}/Media/Movies:/movies
      - /media/{{ mount_point }}/Media/TV Shows:/tv
    ports:
      - 6767:6767
    restart: unless-stopped
    networks:
      - bridge_network

networks:
  bridge_network:
    driver: bridge
