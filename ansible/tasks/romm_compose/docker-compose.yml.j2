version: "3"

volumes:
  mysql_data:
  romm_resources:
  romm_redis_data:

services:
  romm:
    image: rommapp/romm:{{ docker_env.ROMM_VERSION }}
    container_name: romm
    restart: unless-stopped
    environment:
      - DB_HOST=romm-db
      - DB_NAME=romm # Should match MARIADB_DATABASE in mariadb
      - DB_USER=romm-user # Should match MARIADB_USER in mariadb
      - DB_PASSWD={{ docker_env.DB_PASSWD }} # Should match MARIADB_PASSWORD in mariadb
      - ROMM_AUTH_SECRET_KEY={{ docker_env.ROMM_KEY }}  # Generate a key with `openssl rand -hex 32`
      - SCREENSCRAPER_USER={{ docker_env.SCREENSCRAPER_USER }}  # These are the recommended metadata providers
      - SCREENSCRAPER_PASSWORD={{ docker_env.SCREENSCRAPER_PASSWORD }}  # https://docs.romm.app/latest/Getting-Started/Metadata-Providers/#screenscraper
      - RETROACHIEVEMENTS_API_KEY={{ docker_env.RETROACHIEVEMENTS_API_KEY }}  # https://docs.romm.app/latest/Getting-Started/Metadata-Providers/#retroachievements
      - STEAMGRIDDB_API_KEY={{ docker_env.STEAMGRIDDB_API_KEY }}  # https://docs.romm.app/latest/Getting-Started/Metadata-Providers/#steamgriddb
      - HASHEOUS_API_ENABLED={{ docker_env.HASHEOUS_API_ENABLED }}  # https://docs.romm.app/latest/Getting-Started/Metadata-Providers/#hasheous
    volumes:
      - /media/{{ mount_point }}/Media/metadata/romm/resources:/romm/resources # Resources fetched from IGDB (covers, screenshots, etc.)
      - /media/{{ mount_point }}/Media/metadata/romm/redis:/redis-data # Cached data for background tasks
      - /media/{{ mount_point }}/Media/games/library:/romm/library # Your game library. Check https://docs.romm.app/latest/Getting-Started/Folder-Structure/ for more details.
      - /media/{{ mount_point }}/Media/metadata/romm/assets:/romm/assets # Uploaded saves, states, etc.
      - /media/{{ mount_point }}/Media/metadata/romm/config:/romm/config # Path where config.yml is stored
    ports:
      - {{ ports.romm }}:8080
    depends_on:
      romm-db:
        condition: service_healthy
        restart: true

  romm-db:
    image: mariadb:{{ docker_env.ROMM_MARIADB_VERSION }}
    container_name: romm-db
    restart: unless-stopped
    environment:
      - MARIADB_ROOT_PASSWORD={{ docker_env.DB_PASSWD }}  # Use a unique, secure password
      - MARIADB_DATABASE=romm
      - MARIADB_USER=romm-user
      - MARIADB_PASSWORD={{ docker_env.DB_PASSWD }} 
    volumes:
      - mysql_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      start_period: 30s
      interval: 10s
      timeout: 5s
      retries: 5