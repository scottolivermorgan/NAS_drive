services:
  audiobookshelf:
    image: ghcr.io/advplyr/audiobookshelf:{{ docker_env.ABS_VERSION }}
    ports:
      - {{ ports.audiobookshelf }}:80
    volumes:
      - /media/{{ mount_point }}:/media/{{ mount_point }}
      - /media/{{ mount_point }}/Media/Metadata/audio_bookshelf/metadata:/metadata
      # The config directory needs to be on the same physical machine
      # you are running ABS on
      - /media/{{ mount_point }}/Media/Metadata/audio_bookshelf/config:/config
    restart: always