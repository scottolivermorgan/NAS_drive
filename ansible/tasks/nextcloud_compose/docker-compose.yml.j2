version: '3'

volumes:
  nextcloud:
  db:
  redis:

services:

  db:
    image: mariadb:{{ docker_env.MARIADB_VERSION }}
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW --innodb-read-only-compressed=OFF
    restart: always
    container_name: mariadb
    volumes:
      - db:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5
    environment:
      - MYSQL_ROOT_PASSWORD={{ docker_env.MYSQL_ROOT_PASSWORD }}
      - MYSQL_PASSWORD={{ docker_env.MYSQL_PASSWORD }}
      - MYSQL_DATABASE={{ docker_env.MYSQL_DATABASE }}
      - MYSQL_USER={{ docker_env.MYSQL_USER }}
    networks:
      - nextcloud_network

  redis:
    image: redis:alpine
    container_name: redis
    restart: always
    command: ["redis-server", "--requirepass", "{{ docker_env.REDIS_PASSWORD }}"]
    networks:
      - nextcloud_network

  app:
    image: nextcloud:{{ docker_env.NEXTCLOUD_VERSION }}
    container_name: nextcloud
    restart: always
    ports:
      - {{ ports.nextcloud }}:80
    volumes:
      - nextcloud:/var/www/html
      - /media/{{ mount_point }}:/media/{{ mount_point }}
    healthcheck:
      test: ["CMD", "php", "-f", "/var/www/html/occ", "status"]
      interval: 30s
      timeout: 10s
      retries: 5
    environment:

      # --- AUTOMATED NEXTCLOUD SETUP ---
      - NEXTCLOUD_ADMIN_USER={{ docker_env.NEXTCLOUD_ADMIN_USER }}
      - NEXTCLOUD_ADMIN_PASSWORD={{ docker_env.NEXTCLOUD_ADMIN_PASSWORD }}

      # --- DATABASE CONFIG ---
      - MYSQL_HOST=db
      - MYSQL_PASSWORD={{ docker_env.MYSQL_PASSWORD }}
      - MYSQL_DATABASE={{ docker_env.MYSQL_DATABASE }}
      - MYSQL_USER={{ docker_env.MYSQL_USER }}

      # --- REDIS CONFIG ---
      - REDIS_HOST=redis
      - REDIS_HOST_PASSWORD={{ docker_env.REDIS_PASSWORD }}

      # Optional: preconfigure trusted domains
      - NEXTCLOUD_TRUSTED_DOMAINS={{ server_ip }}

    depends_on:
      - db
      - redis
    networks:
      - nextcloud_network

  cron:
    image: nextcloud:{{ docker_env.NEXTCLOUD_VERSION }}
    container_name: nextcloud_cron
    restart: always
    volumes:
      - nextcloud:/var/www/html
    entrypoint: /cron.sh
    depends_on:
      - db
      - redis
    networks:
      - nextcloud_network

networks:
  nextcloud_network:
    driver: bridge
